<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ecran28Activity"
    tools:showIn="@layout/activity_ecran28">

    <ro.nubloca.extras.CustomFontTitilliumRegular
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:text="@string/propune_mesaj_1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />


    <LinearLayout
        android:id="@+id/lay_mesaj"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/border1"
        android:padding="10dp"
        android:minHeight="130dp"
        android:layout_below="@+id/textView15">

        <ro.nubloca.extras.CustomFontTitilliumRegular
            android:id="@+id/mesaj"
            android:layout_width="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Mesaj: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#999999" />
        <EditText
            android:id="@+id/editText6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:background="@android:color/transparent"
            android:nestedScrollingEnabled="true"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:maxLines="4" />
    </LinearLayout>

    <ro.nubloca.extras.CustomFontTitilliumBold
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@drawable/acord_btn"
        android:gravity="center"

        android:text="@string/propune_mesaj_3"

        android:textColor="#ffffff"
        android:textSize="22sp"
        android:clickable="true"
        android:layout_below="@+id/lay_mesaj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView10"
        android:background="@drawable/fly"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="7dp" />

</RelativeLayout>
