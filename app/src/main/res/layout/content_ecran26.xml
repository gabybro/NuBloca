<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_white"
    android:paddingBottom="40dp"
    android:visibility="gone"
    tools:context=".Ecran26Activity"
    tools:showIn="@layout/activity_ecran26">



    <ImageView
        android:id="@+id/car_exemplu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
    <!-- android:src="@drawable/car_exemplu" -->

    <ImageView
        android:id="@+id/plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/car_exemplu"
        android:layout_centerInParent="true"
        android:layout_marginTop="55dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"

        />
    <!--    android:scaleType="centerCrop"-->
    <!--    android:adjustViewBounds="true"-->

    <!--android:layout_marginLeft="65dp"
    android:layout_marginRight="65dp"-->
    <!-- android:src="@drawable/plate" -->


    <LinearLayout
        android:id="@+id/linearPlate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_exemplu"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"></LinearLayout>


    <ro.nubloca.extras.CustomFontTitilliumRegular
        android:id="@+id/text_TipInmatriculare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearPlate1"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/exemplu_7"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="19dp"
        android:visibility="invisible" />

    <ro.nubloca.extras.CustomFontTitilliumBold
        android:id="@+id/nume_tip_inmatriculare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_TipInmatriculare"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/exemplu_8"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nume_tip_inmatriculare"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/nume_tip_inmatriculare"
        android:layout_toRightOf="@+id/nume_tip_inmatriculare"
        android:visibility="invisible"

        />
    <!--android:background="@drawable/ro_flag"-->


</RelativeLayout>