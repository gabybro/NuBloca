<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_white"
    android:paddingBottom="40dp"
    tools:context=".Ecran26Activity"
    tools:showIn="@layout/activity_ecran26">

    <ImageView
        android:id="@+id/car_exemplu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/car_exemplu" />

    <ImageView
        android:id="@+id/plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/car_exemplu"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="55dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/plate" />

    <TextView
        android:id="@+id/plate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plate"
        android:layout_alignStart="@+id/plate"
        android:layout_alignTop="@+id/plate"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="@string/exemplu_1"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/plate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/plate"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/plate1"
        android:layout_toRightOf="@+id/plate1"
        android:text="@string/exemplu_2"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/plate3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/plate"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/plate2"
        android:layout_toRightOf="@+id/plate2"
        android:text="@string/exemplu_3"
        android:textColor="#000000"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/linearPlate1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_exemplu"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ro.nubloca.extras.CustomFontTitilliumBold
            android:id="@+id/field1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/plate_border"
            android:gravity="center_vertical|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/exemplu_4"
            android:textColor="@color/text_layout_custom"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ro.nubloca.extras.CustomFontTitilliumBold
            android:id="@+id/field2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/plate_border"
            android:gravity="center_vertical|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/exemplu_5"
            android:textColor="@color/text_layout_custom"
            android:textSize="35sp"
            android:visibility="invisible" />

        <ro.nubloca.extras.CustomFontTitilliumBold
            android:id="@+id/field3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plate_border"
            android:gravity="center_vertical|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/exemplu_6"
            android:textColor="@color/text_layout_custom"
            android:textSize="35sp"
            android:visibility="gone" />

    </LinearLayout>

    <ro.nubloca.extras.CustomFontTitilliumRegular
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearPlate1"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/exemplu_7"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="19dp"
        android:visibility="invisible" />

    <ro.nubloca.extras.CustomFontTitilliumBold
        android:id="@+id/nume_tip_inmatriculare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView20"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/textView20"
        android:layout_toRightOf="@+id/textView20"
        android:text="@string/exemplu_8"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nume_tip_inmatriculare"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/nume_tip_inmatriculare"
        android:layout_toRightOf="@+id/nume_tip_inmatriculare"
        android:background="@drawable/ro_flag"
        android:visibility="invisible" />


</RelativeLayout>