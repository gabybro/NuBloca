<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ecran10Activity"
    tools:showIn="@layout/activity_ecran10">

    <ro.nubloca.CustomFontTitilliumRegular
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Email: contact@nubloca.ro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />

    <ro.nubloca.CustomFontTitilliumRegular
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="30dp"
        android:text="Ne puteti contacta si prin formularul de mai jos."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#666666" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="88dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView9"
        android:background="@drawable/plic" />

    <LinearLayout
        android:id="@+id/lay_nume"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="40dp"
        android:background="@drawable/border1"
        android:padding="10dp">

        <ro.nubloca.CustomFontTitilliumRegular
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Nume: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#999999" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textCapWords"
            android:maxLength="50"
            android:maxLines="1" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay_telefon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lay_nume"
        android:layout_marginTop="20dp"
        android:background="@drawable/border1"
        android:padding="10dp">


        <ro.nubloca.CustomFontTitilliumRegular
            android:id="@+id/telefon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Telefon: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#999999" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="50" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lay_telefon"
        android:layout_marginTop="20dp"
        android:background="@drawable/border1"
        android:padding="10dp">

        <ro.nubloca.CustomFontTitilliumRegular
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="E-mail: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#999999" />
        <EditText
            android:id="@+id/editText5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:maxLength="70" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_mesaj"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lay_email"
        android:layout_marginTop="20dp"
        android:background="@drawable/border1"
        android:padding="10dp"
        android:minHeight="130dp">

        <ro.nubloca.CustomFontTitilliumRegular
            android:id="@+id/mesaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Mesaj: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#999999" />
        <EditText
            android:id="@+id/editText6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:background="@android:color/transparent"
            android:nestedScrollingEnabled="true"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:maxLines="4" />
    </LinearLayout>

</RelativeLayout>
