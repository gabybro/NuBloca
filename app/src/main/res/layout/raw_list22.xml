<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/border_row_list"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusable="true"
    android:gravity="end"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_rowList"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.00"
        android:background="@drawable/list_ripple_effect"
        android:clickable="true"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/radioButton"
            android:layout_width="@dimen/radioSize"
            android:layout_height="@dimen/radioSize"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/paddingLeftRadio_ecran25"
            android:layout_marginStart="@dimen/paddingLeftRadio_ecran25"
            android:background="@drawable/radio"
            android:clickable="false" />

        <ro.nubloca.extras.CustomFontTitilliumRegular
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingRightRadio_ecran25"
            android:layout_marginStart="@dimen/paddingRightRadio_ecran25"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/text_layout_custom"
            android:textSize="@dimen/textSize_ecran25_listaTari" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        style="@style/relative_custom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_rowList"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp"
            android:background="@drawable/bar1" />

        <ro.nubloca.extras.CustomFontTitilliumRegular
            android:id="@+id/exemplu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/mesaje__standard_10"
            android:textColor="@color/text_layout_custom_light"
            android:textSize="@dimen/textSize_rowListaExemplu" />


        <ImageView
            android:id="@+id/chevron"
            android:layout_width="@dimen/width_chevron23"
            android:layout_height="@dimen/height_chevron23"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/chevron" />

    </LinearLayout>

</LinearLayout>