<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_white"
    android:layout_marginTop="70dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ecran25Activity"
    tools:showIn="@layout/activity_ecran25">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2">

        <RelativeLayout
            android:id="@+id/rel_bar1"
            style="@style/relative_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp" />

            <ro.nubloca.CustomFontTitilliumRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tara_2"
                android:textSize="23dp"
                android:textColor="@color/text_layout_custom"
                android:id="@+id/text1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/radioButton2"
                android:layout_toEndOf="@+id/radioButton2"
                android:layout_marginLeft="20dp" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:background="@drawable/border2">

        <RelativeLayout
            android:id="@+id/rel_bar2"
            style="@style/relative_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp" />

            <ro.nubloca.CustomFontTitilliumRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tara_3"
                android:textSize="23dp"
                android:textColor="@color/text_layout_custom"
                android:id="@+id/text2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/radioButton3"
                android:layout_toEndOf="@+id/radioButton3"
                android:layout_marginLeft="20dp" />


        </RelativeLayout>
</RelativeLayout>

</RelativeLayout>
