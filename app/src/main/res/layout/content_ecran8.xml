<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg_setari"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="30dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ecran8Activity"
    tools:showIn="@layout/activity_ecran8">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/rel_bar1"
            android:background="@color/list_delimit" />

        <RelativeLayout
            android:id="@+id/rel_bar1"
            style="@style/relative_custom">

            <ro.nubloca.extras.CustomFontTitilliumRegular
                android:id="@+id/textView2"
                style="@style/text_layout_custom"
                android:text="Notificari" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/rel_bar2"
            android:background="@color/list_delimit" />

        <RelativeLayout
            android:id="@+id/rel_bar2"
            style="@style/relative_custom"
            android:layout_below="@+id/rel_bar1">

            <ro.nubloca.extras.CustomFontTitilliumRegular
                android:id="@+id/textView3"
                style="@style/text_layout_custom"
                android:text="Limba" />

            <ro.nubloca.extras.CustomFontTitilliumRegular
                android:id="@+id/textView4"
                style="@style/text_layout_custom_light"
                android:layout_toLeftOf="@+id/chevron"
                android:layout_toStartOf="@+id/chevron"
                android:text="Romana"/>

            <ImageView
                android:id="@+id/chevron"
                android:layout_width="7dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/chevron" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/rel_bar3"
            android:background="@color/list_delimit" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_bar3"
            android:background="@color/list_delimit" />

        <RelativeLayout
            android:id="@+id/rel_bar3"
            style="@style/relative_custom"
            android:layout_below="@+id/rel_bar2">

            <ro.nubloca.extras.CustomFontTitilliumRegular
                android:id="@+id/textView5"
                style="@style/text_layout_custom"
                android:text="Tara in care te afli" />

            <ro.nubloca.extras.CustomFontTitilliumRegular
                android:id="@+id/textView6"
                style="@style/text_layout_custom_light"
                android:layout_toLeftOf="@+id/chevron1"
                android:layout_toStartOf="@+id/chevron1"
                android:text="Automat" />

            <ImageView
                android:id="@+id/chevron1"
                android:layout_width="7dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/chevron" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
