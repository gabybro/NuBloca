<?xml version="1.0" encoding="utf-8"?>
<ro.nubloca.extras.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ecran13Activity"
    tools:showIn="@layout/activity_ecran13"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="25dp">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >


        <ro.nubloca.extras.CustomFontTitilliumRegular
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/sfat_1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_layout_custom"
            android:textSize="@dimen/font40"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />

        <ro.nubloca.extras.CustomFontTitilliumRegular
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView1"
            android:text="@string/sfat_2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_layout_custom"
            android:textSize="@dimen/font31"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp" />


    </RelativeLayout>
</ro.nubloca.extras.ObservableScrollView>