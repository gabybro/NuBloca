<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="-1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/red_sign"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp" />

            <ro.nubloca.CustomFontTitilliumRegular
                android:id="@+id/popup_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tos_esti_sigur"
                android:textColor="#ff0000"
                android:textSize="20sp"
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp">

                <ro.nubloca.CustomFontTitilliumBold
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:layout_alignParentLeft="true"
                    android:textAllCaps="false"
                    android:text="@string/nu"
                    android:background="@drawable/refuz_btn"
                    android:gravity="center"
                    android:layout_alignParentStart="false"
                    android:textColor="@color/btn_white"
                    android:textSize="25sp"
                    android:clickable="true" />

                <ro.nubloca.CustomFontTitilliumBold
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="false"
                    android:text="@string/da"
                    android:background="@drawable/acord_btn"
                    android:layout_alignParentEnd="false"
                    android:gravity="center"
                    android:textColor="@color/btn_white"
                    android:textSize="25sp"
                    android:clickable="true" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
