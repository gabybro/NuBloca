<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ro.nubloca.SecondActivity"
    tools:showIn="@layout/activity_second">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tos_text"
            android:textColor="#595959"
            android:id="@+id/editText2"
            android:textSize="20sp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="22dp" />



    </ScrollView>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="#80000000"
        android:orientation="horizontal">


        <Button
            android:id="@+id/acord"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/hello"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/view"
            android:textAllCaps="false"
            android:background="@drawable/acord_btn"
            android:text="@string/acord"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/btn_white" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/refuz"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:textAllCaps="false"
            android:layout_toLeftOf="@+id/view"
            android:background="@drawable/refuz_btn"
            android:textColor="@color/btn_white"
            android:longClickable="false"
            android:text="@string/refuz"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bac_dim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:visibility="gone" >
    </RelativeLayout>
</RelativeLayout>
