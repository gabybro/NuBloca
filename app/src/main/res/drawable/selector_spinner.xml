<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>



            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/plate_box">
